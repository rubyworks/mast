  service: Grancher
  active: true

box:
  service: Box
  types  : [gem]
  active : true

ridoc:
  service: RIDoc
  include: ~
  exclude: ~
  output : ri
  active : true

rdoc:
  service  : RDoc
  format   : newfish
  include  : ~
  exclude  : [ Syckfile ]
  output   : site/doc/api
  active   : true

dnote:
  service  : DNote
  loadpath : ~
  labels   : ~
  exclude  : [work]
  output   : ~
  format   : ~
  active   : true

stats:
  service  : Stats
  title    : ~
  loadpath : ~
  exclude  : ~
  output   : ~
  active   : true

ronn:
  service  : custom
  cycle    : main
  document : |
    system 'ronn --manual="Mast" --organization="RubyWorks" --style="toc" ronn/*.ronn'
    system 'mv ronn/*.1 man/man1/'
    system 'mv ronn/*.html site/doc/man/'

vclog-history:
  service  : VCLog
  type     : history
  format   : atom, html
  output   : ~
  active   : true

vclog-changelog:
  service  : VCLog
  type     : changelog
  format   : atom, html
  output   : ~
  active   : true

email:
  service : Email
  file    : ~
  subject : ~
  mailto  :
    - ruby-talk@ruby-lang.org
    - rubyworks-mailinglist@googlegroups.com
  from    : <%= ENV['EMAIL_ACCOUNT'] %>
  server  : <%= ENV['EMAIL_SERVER'] %>
  port    : <%= ENV['EMAIL_PORT'] %>
  account : <%= ENV['EMAIL_ACCOUNT'] %>
  domain  : <%= ENV['EMAIL_DOMAIN'] %>
  login   : <%= ENV['EMAIL_LOGIN'] %>
  secure  : <%= ENV['EMAIL_SECURE'] %>
  active  : true

syntax:
  service  : Syntax
  loadpath : ~
  exclude  : ~
  active   : false

